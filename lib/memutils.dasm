:_strcmp
	SET C, 0
:_strcmp_loop
	IFE [A], 0
		IFE [B], 0
			SET PC, _strcmp_success
	IFN [A], [B]
		SET PC, _strcmp_wind
	ADD A, 1
	ADD B, 1
	ADD C, 1
	SET PC, _strcmp_loop
:_strcmp_wind
	IFE [B], 0
		SET PC, _strcmp_failure
	ADD B, 1
	ADD C, 1
	SET PC, _strcmp_wind
:_strcmp_failure
	SET A, 0
	SET PC, POP
:_strcmp_success
	SET A, 1
	SET PC, POP


:_strcmp
	SET B, 0
:_strcmp_loop
	IFE [I], 0
		IFE [J], 0
			SET PC, _strcmp_success
	IFN [I], [J]
		SET PC, _strcmp_wind
	ADD I, 1
	ADD J, 1
	ADD B, 1
	SET PC, _strcmp_loop
:_strcmp_wind
	IFE [J], 0
		SET PC, _strcmp_failure
	ADD J, 1
	ADD B, 1
	SET PC, _strcmp_wind
:_strcmp_failure
	SET A, 0
	SET PC, POP
:_strcmp_success
	SET A, 1
	SET PC, POP
	
