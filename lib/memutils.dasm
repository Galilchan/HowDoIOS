:x_memset
	ADD Y, X
:x_memset_loop
	IFG X, Y
		SET PC, x_memset_after
	SET [X],   Z
	SET [X+1], Z
	SET [X+2], Z
	SET [X+3], Z
	ADD X, 4
	SET PC, x_memset_loop
:x_memset_after
	IFG X, Y
		SET PC, x_memset_end
	SET [X], Z
	ADD X, 1
	SET PC, x_memset_after
:x_memset_end
	SET Z, POP
	SET X, POP
	SET PC, POP
	
:_memset
	IFG A, B
		SET PC, POP
	SET [A], C
	ADD A, 1
	SET PC, _memset

